{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@env": ["./app/env.d.ts"],
      "@/*": ["./*"]
    },
    "types": ["nativewind/types"] // Include any necessary types here
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "index.tsx"
  ]
}
